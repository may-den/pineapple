{
    "name": "wethersherbs/pineapple",
    "description": "An API-compatible replacement, forked from and for PEAR DB",
    "keywords": ["database"],
    "license": [
        "BSD-2-Clause",
        "PHP-3.0"
    ],
    "require": {
        "php": ">=5.4",
        "ext-pdo": "*"
    },
    "suggest": {
        "doctrine/dbal": "DoctrineDbal driver requires Doctrine DBAL >=2.5 to be installed"
    },
    "scripts": {
        "test": "phpunit --colors=auto"
    },
    "autoload": {
        "psr-4": {
            "Pineapple\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pineapple\\Test\\": "test/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "diablomedia/phpunit-pretty-printer": "^1.0",
        "ext-pdo_sqlite": "*",
        "doctrine/dbal": ">=2.5"
    }
}
